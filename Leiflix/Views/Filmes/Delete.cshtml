@model Leiflix.Models.Filme

@{
    ViewData["Title"] = "Delete";
}


<head>
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css" />
</head>

<h4 class="card-title mb-3 mt-2 font-weight-bolder">
    <span class="ml-0">
        <a asp-action="Index">
            <i style="color: #000000;font-size:x-large" class="fa fa-chevron-left mr-2"></i>
        </a>
    </span>
    <span class="font-weight-normal">Are you sure you want to delete <span class="font-weight-bold">@Html.DisplayFor(model => model.Name)?</span></span>
</h4>
<hr size="7" width="100%" class="mt-3" style="color:black;background-color:black">


<div class="container border-0">
    <div class="card border-0">
        <div class="card-body">
            <h6 style="color:black" class="card-subtitle mb-1 font-weight-normal">@Html.DisplayFor(model => model.Age)<span>+</span> <span class="mr-5"></span> @Html.DisplayFor(model => model.Duration) <span>min</span> </h6>
            <div class="row">
                <div class="col-lg-5 col-md-5 col-sm-6">
                    <div class="white-box text-center"><img src="@Url.Content("~/image/"+ Model.ImageName)" height="600px" width="430px"></div>
                </div>
                <div class="col-lg-7 col-md-7 col-sm-6">
                    <ul class="list-unstyled">
                        <li> <span class="font-weight-bold">Categoria: </span>@Html.DisplayFor(model => model.Categoria.Name)</li>
                        <li> <span class="font-weight-bold">Release Date: </span> @Model.Date.ToShortDateString()</li>
                        <li> <span class="font-weight-bold">Director: </span>@Html.DisplayFor(model => model.Producers)</li>
                        <li> <span class="font-weight-bold">Actors: </span>@Html.DisplayFor(model => model.Actors)</li>
                    </ul>
                    <h3 style="font-size:medium" class="box-title mt-5 font-weight-bolder">Description:</h3>
                    <p>@Html.DisplayFor(model => model.Description)</p>
                </div>
            </div>
        </div>
    </div>
</div>

<form asp-action="Delete">
    <input type="hidden" asp-for="Id" />
    <input type="submit" value="Delete" class="btn btn-outline-danger btn-lg btn-block px-5 font-weight-bold mt-5" />
</form>

