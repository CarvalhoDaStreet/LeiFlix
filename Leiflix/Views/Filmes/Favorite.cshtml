@model Leiflix.Models.ViewModels.FavoritosViewModel

@{
    ViewData["Title"] = "Favorite";
}


<head>
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css" />
</head>

<h3 class="card-title mb-3 mt-2 font-weight-bolder">
    <span class="ml-0">
        <a asp-action="Index">
            <i style="color: #000000;font-size:x-large" class="fa fa-chevron-left mr-2"></i>
        </a>
    </span>
    <span class="font-weight-normal">Are you sure you want to add <span class="font-weight-bold">@Model.FilmeName</span> to your favorites?</span>
</h3>
<hr size="7" width="100%" class="mt-3" style="color:black;background-color:black">

<div class="row">
    <div class="col-md-4">
        <form asp-action="Favorite">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group" hidden>
                <label asp-for="UserId" class="control-label"></label>
                <input asp-for="UserId" class="form-control" />
                <span asp-validation-for="UserId" class="text-danger"></span>
            </div>
            <div class="form-group" hidden>
                <label asp-for="FilmeId" class="control-label"></label>
                <input asp-for="FilmeId" class="form-control" />
                <span asp-validation-for="FilmeId" class="text-danger"></span>
            </div>
            <div class="form-group" hidden>
                <label asp-for="FilmeName" class="control-label"></label>
                <input asp-for="FilmeName" class="form-control" />
                <span asp-validation-for="FilmeName" class="text-danger"></span>
            </div>
            <div class="form-group" hidden>
                <label asp-for="ImageName" class="control-label"></label>
                <input asp-for="ImageName" class="form-control" />
                <span asp-validation-for="ImageName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Add" class="btn btn-outline-danger btn-lg btn-block px-5 font-weight-bold mt-3" />
            </div>
        </form>
    </div>
</div>

