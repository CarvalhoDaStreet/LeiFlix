@model Leiflix.Models.Filme

@{
    ViewData["Title"] = "Create";
}

<head>
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css" />
</head>

<h3 class="card-title mb-3 mt-2 font-weight-bolder">
    <span class="ml-0">
        <a asp-action="Index">
            <i style="color: #000000;font-size:x-large" class="fa fa-chevron-left mr-2"></i>
        </a>
    </span>
    <span class="font-weight-normal">Add new movie</span>
</h3>
<hr size="7" width="100%" class="mt-3" style="color:black;background-color:black">


<div class="col-md-4">
    <form asp-action="Create" enctype="multipart/form-data">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="form-group mt-4">
            <input asp-for="Name" placeholder="Movie Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="form-group">
            <input asp-for="Description" placeholder="Movie Description" class="form-control" />
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>

        <div class="form-group">
            <input asp-for="Actors" placeholder="Actors" class="form-control" />
            <span asp-validation-for="Actors" class="text-danger"></span>
        </div>
        <div class="form-group">
            <input asp-for="Producers" placeholder="Producers" class="form-control" />
            <span asp-validation-for="Producers" class="text-danger"></span>
        </div>
        <div class="form-group">
            <input asp-for="Age" placeholder="Minimum age" class="form-control" />
            <span asp-validation-for="Age" class="text-danger"></span>
        </div>
        <div class="form-group">
            <input asp-for="Duration" placeholder="Movie duration" class="form-control" />
            <span asp-validation-for="Duration" class="text-danger"></span>
        </div>
        <div class="form-group">
            <input asp-for="Date" placeholder="Release Date" class="form-control" />
            <span asp-validation-for="Date" class="text-danger"></span>
        </div>
        <div class="form-group">
            <input asp-for="Price" placeholder="Movie Price" class="form-control" />
            <span asp-validation-for="Price" class="text-danger"></span>
        </div>
        <div class="form-group"> 
            <input asp-for="ImageFile" placeholder="Image" accept="image/*" />
            <span asp-validation-for="ImageFile" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="CategoriaId" class="control-label">Category</label>
            <select asp-for="CategoriaId" class="form-control" asp-items="ViewBag.CategoriaId"></select>
            <span asp-validation-for="CategoriaId" class="text-danger"></span>
        </div>

        <div class="form-group mt-3">
            <input class="btn btn-outline-dark btn-lg btn-block px-5 font-weight-bold" type="submit" value="Create" />
           
        </div>
    </form>


</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
