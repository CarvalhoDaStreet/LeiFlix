@model Leiflix.Models.Sessao

@{
    ViewData["Title"] = "Delete";
}

<head>
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css" />
</head>

<h4 class="card-title mb-3 mt-2 font-weight-bolder">
    <span class="ml-0">
        <a asp-action="Index">
            <i style="color: #000000;font-size:x-large" class="fa fa-chevron-left mr-2"></i>
        </a>
    </span>
    <span class="font-weight-normal">Are you sure you want to delete this Session?</span>
</h4>
<hr size="7" width="100%" class="mt-3" style="color:black;background-color:black">

<div>
    <dl class="row">
        <dt class="col-sm-2">
            Room: 
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Sala)
        </dd>
        <dt class="col-sm-2">
            Number of seats: 
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.RoomSeats)
        </dd>
        <dt class="col-sm-2">
            Session Date: 
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Date)
        </dd>
        <dt class="col-sm-2">
           Movie: 
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Filme.Name)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-outline-danger btn-lg btn-block px-5 font-weight-bold mt-5" />
    </form>
</div>
