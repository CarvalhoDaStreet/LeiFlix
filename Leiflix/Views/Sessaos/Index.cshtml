@model IEnumerable<Leiflix.Models.Sessao>

@{
    ViewData["Title"] = "Index";
}

<head>
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css" />
</head>

<h3 class="card-title mb-3 mt-2 font-weight-bolder">
    <span class="ml-0">
        <a asp-controller="Filmes" asp-action="Index">
            <i style="color: #000000;font-size:x-large" class="fa fa-chevron-left mr-2"></i>
        </a>
    </span>
    <span class="font-weight-normal">Sessions</span>
</h3>
<hr size="7" width="100%" class="mt-3" style="color:black;background-color:black">

<h5>
    <a asp-action="Create">Create new session</a>
</h5>

<table class="table">
    <thead> 
        <tr>
            <th>
                Room
            </th>
            <th>
               Number of seats
            </th>
            <th>
               Session Date
            </th>
            <th>
                Movie
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Sala)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RoomSeats)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Date)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Filme.Name)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id"> <i style="color: #000000;font-size:x-large" class="fa fa-edit mr-1"></i></a> |
                <a asp-action="Delete" asp-route-id="@item.Id"><i style="color: #f92626; font-size: x-large" class="fa fa-trash mr-1"></i></a>
            </td>
        </tr>
        }
    </tbody>
</table>
