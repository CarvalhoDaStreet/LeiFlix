@model IEnumerable<Leiflix.Models.Perfil>

@{
    ViewData["Title"] = "Index";
}

<head>
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css" />
</head>

<h3 class="card-title mb-3 mt-2 font-weight-bolder">
    <span class="ml-0">
        <a asp-controller="Filmes" asp-action="Index">
            <i style="color: #000000;font-size:x-large" class="fa fa-chevron-left mr-2"></i>
        </a>
    </span>
    My Profile
 </h3>       


    <hr size="7" width="100%" style="color:black;background-color:black">
    @foreach (var item in Model)
    {

<ul class="list-unstyled mt-5">
    <li style="font-size:large" class="mb-3"> <span class="font-weight-bold">Email: </span> @Html.DisplayFor(modelItem => item.Email)</li>
    <li style="font-size:large" class="mb-3"> <span class="font-weight-bold">Nome: </span>  @Html.DisplayFor(modelItem => item.Nome)</li>
    <li style="font-size:large" class="mb-3"> <span class="font-weight-bold">Username: </span>  @Html.DisplayFor(modelItem => item.Username)</li>
    <li style="font-size:large" class="mb-3"> <span class="font-weight-bold">Favorite Category: </span>  @Html.DisplayFor(modelItem => item.Categoria.Name)</li>
    <a style="font-size:medium" class="btn btn-outline-info btn-lg btn-block px-5 font-weight-bold mt-1"
       asp-controller="Favoritos">My Favorite Movies</a>
    <a style="font-size:medium" class="btn btn-outline-secondary btn-lg btn-block px-5 font-weight-bold mt-3"
       asp-controller="Cart">My Viewed Movies</a>
</ul>
        @if (User.Identity.IsAuthenticated)
        {
            <a style="font-size:medium" class="btn btn-outline-success btn-lg btn-block px-5 font-weight-bold mt-2"
               asp-action="Edit" asp-route-id="@item.Id"><i class=""></i>Edit Favorite Category</a>
        }

    }

