@model Leiflix.Models.Perfil

@{
    ViewData["Title"] = "Edit";
}


<head>
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css" />
</head>

<h3 class="card-title mb-3 mt-2 font-weight-bolder">
    <span class="ml-0">
        <a asp-action="Index">
            <i style="color: #000000;font-size:x-large" class="fa fa-chevron-left mr-2"></i>
        </a>
    </span>
    <span class="font-weight-normal">Edit favorite category</span>
</h3>
<hr size="7" width="100%" class="mt-3" style="color:black;background-color:black">

<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div  class="form-group" hidden>
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" hidden />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group" hidden>
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" hidden />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group" hidden="hidden">
                <label asp-for="Username" class="control-label"></label>
                <input asp-for="Username" class="form-control" hidden />
                <span asp-validation-for="Username" class="text-danger"></span>
            </div>
            <div class="form-group">
                <select asp-for="CategoriaId" class="form-control" asp-items="ViewBag.CategoriaId"></select>
                <span asp-validation-for="CategoriaId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save Changes" class="btn btn-outline-dark btn-lg btn-block px-5 font-weight-bold mt-3" />
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
