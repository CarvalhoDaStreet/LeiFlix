@model Leiflix.Models.Favoritos

@{
    ViewData["Title"] = "RemoveFavorite";
}

<head>
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css" />
</head>

<h4 class="card-title mb-3 mt-2 font-weight-bolder">
    <span class="ml-0">
        <a asp-action="Index">
            <i style="color: #000000;font-size:x-large" class="fa fa-chevron-left mr-2"></i>
        </a>
    </span>
    <span class="font-weight-normal">Are you sure you want to delete <span class="font-weight-bold">@Html.DisplayFor(model => model.FilmeName)</span> from your favorites?</span>
</h4>
<hr size="7" width="100%" class="mt-3" style="color:black;background-color:black">


<div>
    <dl class="row" hidden>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.UserId)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.UserId)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.FilmeId)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FilmeId)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.FilmeName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FilmeName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ImageName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ImageName)
        </dd>
    </dl>

    <form asp-action="RemoveFavorite">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-outline-danger btn-lg btn-block px-5 font-weight-bold mt-5" />
    </form>

</div>
