@model IEnumerable<Leiflix.Models.Favoritos>

@{
    ViewData["Title"] = "Index";
}

<head>
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css" />
</head>

<h3 class="card-title mb-3 mt-2 font-weight-bolder">
    <span class="ml-0">
        <a asp-controller="Perfils" asp-action="Index">
            <i style="color: #000000;font-size:x-large" class="fa fa-chevron-left mr-2"></i>
        </a>
    </span>
    My Favorite Movies
</h3>


<hr size="7" width="100%" style="color:black;background-color:black">


<div class="container-fluid mt-5 mb-5">
    <div class="row g-2">
        <div class="col-md-12">
            <div class="row g-2">
                @foreach (var item in Model)
                {

                    <div class="col-md-4">
                        <div style="background-color:#ffffff;" class="product py-4 border-0 mb-4  border-dark">
                            <a asp-controller="Filmes" asp-action="Details" asp-route-id="@item.FilmeId">
                                <div class="text-center"> <img src="@Url.Content("~/Image/" + item.ImageName)" height="200vh"> </div>
                            </a>
                            <div class="about text-center text">
                                <h5 class="text mb-2" style="font-size:medium">@Html.DisplayFor(modelItem => item.FilmeName)</h5>
                                <a asp-action="RemoveFavorite" asp-route-id="@item.Id"><i id="removeFav" data-item-id="123" style="color: #f92626;font-size:x-large" class=" mr-1 align-middle fa fa-heart"></i></a>
                            </div>
                        </div>
                    </div>

                }
            </div>
        </div>
    </div>
</div>

