@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<link href="~/css/site.css" />


<hr size="7" width="100%" style="color:black;background-color:black">

<section class="h-25 bg-white">
    <form id="account" method="post">
        <div class="container h-25 bg-white">
            <div class="row d-flex justify-content-center align-items-center h-25">
                <div class="col-9 col-md-8 col-lg-6 col-xl-5">

                    <div class="card-body p-1 text-center">

                        <div class="mb-md-5 mt-md-4 pb-5">

                            <h2 class="fw-bold mb-5">Login</h2>

                            <div class="form-outline-black form-white mb-4">
                                <input placeholder="UserName" asp-for="Input.UserName" class="form-control" />
                                <span asp-validation-for="Input.UserName" class="text-danger"></span>
                            </div>

                            <div class="form-outline form-white mb-3">
                                <input placeholder="Password" asp-for="Input.Password" class="form-control" />
                                <span asp-validation-for="Input.Password" class="text-danger"></span>
                            </div>

                            <p class="small mb-5 pb-lg-2"><a class="text-black" href="./ForgotPassword">Forgot password?</a></p>
                            <button class="btn btn-outline-dark btn-lg px-5" type="submit">Login</button>

                        </div>
                    </div>
                </div>
            </div>
        </div>

    </form>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
