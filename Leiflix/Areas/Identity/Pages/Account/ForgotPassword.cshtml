@page
@model ForgotPasswordModel
@{
    ViewData["Title"] = "Forgot your password?";
}

<h1>@ViewData["Title"]</h1>
<hr size="7" width="100%" style="color:black;background-color:black">

<section class="h-25 bg-white">
    <form method="post">
        <div class="container h-25 bg-white">
            <div class="row d-flex justify-content-center align-items-center h-25">
                <div class="col-9 col-md-8 col-lg-6 col-xl-5">

                    <div class="card-body p-3 text-center">

                        <div class="mb-md-5 mt-md-4 pb-5">

                            <div class="form-group border-0 mb-4">
                                <input placeholder="Enter your email" asp-for="Input.Email" class="form-control" />
                                <span asp-validation-for="Input.Email" class="text-danger"></span>
                            </div>

                            <button type="submit" class="btn btn-outline-dark btn-lg btn-block px-5 font-weight-bold">Submit</button>

                        </div>
                    </div>
                </div>
            </div>
        </div>

    </form>
</section>

@section Scripts {
    <partial  name="_ValidationScriptsPartial" />
}
